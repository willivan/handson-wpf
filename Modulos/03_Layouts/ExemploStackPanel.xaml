<Window x:Class="Everis.HandsOnWpf.Modulos._03_Layouts.ExemploStackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Everis.HandsOnWpf.Modulos._03_Layouts"
        mc:Ignorable="d"
        Title="Exemplo Stack Panel" Height="190" Width="350">
    <StackPanel Margin="8">
        <TextBlock>Id do Cliente</TextBlock>
        <TextBox></TextBox>

        <TextBlock Margin="0,8,0,0">Nome do Cliente</TextBlock>
        <TextBox></TextBox>

        <TextBlock>Data de Nascimento</TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBox Text="Dia" Width="45" Margin="0,0,10,0"></TextBox>
            <TextBox Text="Mes" Width="45" Margin="0,0,10,0"></TextBox>
            <TextBox Text="Ano" Width="90"></TextBox>
        </StackPanel>
        <Button Margin="0,8,0,0">OK</Button>
        
    </StackPanel>
</Window>
